datasource postgres {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  author    Author?  @relation(fields: [authorId], references: [id])
  authorId  String?  @unique
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Role[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Role {
  id        String   @id @default(cuid())
  name      String   @unique
  users     User[]
}

model Book {
  author    Author?  @relation(fields: [authorId], references: [id])
  authorId  String?
  createdAt DateTime @default(now())
  genres    Genre[]
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Author {
  books     Book[]
  createdAt DateTime @default(now())
  fullName  String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?
}

model Genre {
  books     Book[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}